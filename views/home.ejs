<!doctype html>
<html lang="en">
  <head>
    <%- include('_header') %>
    <title>Home</title>
  </head>
  <body>
    <section class="vh-100">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
              <div class="card" id="list1" style="border-radius: .75rem; background-color: #eff1f2;">
                <div class="card-body py-4 px-4 px-md-5">
      
                  <p class="h1 text-center mt-3 mb-4 pb-3 text-primary">
                    <u>My Todos</u>
                  </p>
                  <form action="/api/v1/todo" method="post">
                  <div class="pb-2">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                          <input type="text" class="form-control form-control-lg" 
                          id="exampleFormControlInput1"
                            name="topic" placeholder="Add Topic...">
                            <input type="text" class="form-control form-control-lg" 
                            id="exampleFormControlInput1"
                              name="detail" placeholder="Add Desc...">
                            
                          <input type="date" id="birthday" name="date">
                          <div>
                            <input class="btn btn-primary" type="submit" value="Add">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  </form>
                  <hr class="my-4">
                <% for(todo of todos) { %>
                  <ul class="list-group list-group-horizontal rounded-0 bg-transparent mb-4">
                    
                    <li
                      class="list-group-item ps-3 pe-0 py-1 rounded-0 border-0 bg-transparent">
                      <div class="d-flex flex-row justify-content-start">
                      <span class="lead"><%= todo.topic %></span>
                </div>
                <div class="text-end text-muted">
                    <span><%= todo.detail %></span>
                  </div>
                    
                    </li>
                
                    <li class="list-group-item ps-3 pe-0 py-1 rounded-0 border-0 bg-transparent" style = "position:absolute; right:0px;">
                      <div class="d-flex flex-row justify-content-end mb-1">
                        <a href="http://localhost:3000/api/v1/todo/<%= todo._id%>" class="btn btn-warning" data-mdb-toggle="tooltip" title="Edit todo"></i>Edit</a>
                        <a href="http://localhost:3000/api/v1/todo/remove/<%= todo._id%>" class="btn btn-danger" title="Delete todo">Delete</a>
                      </div>
                      <div class="text-end text-muted">
                          <p class="medium mb-1">Due Date : <%= todo.date %></p>
                      </div>
                    </li>
                  </ul>
                <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <%- include('_footer') %>
  </body>
</html>